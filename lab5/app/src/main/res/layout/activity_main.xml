<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a1a">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="G-Force Meter"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvTotalG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загальне: 0.00 G"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressTotal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6B35" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMaxG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Максимум: 0.00 G"
        android:textSize="16sp"
        android:textColor="#FFAA00"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvXValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X: 0.00 G"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progressX"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:progress="50"
            android:max="100"
            android:progressTint="#FF4444" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvYValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y: 0.00 G"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progressY"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:progress="50"
            android:max="100"
            android:progressTint="#44FF44" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvZValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z: 0.00 G"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progressZ"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:progress="50"
            android:max="100"
            android:progressTint="#4444FF" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Нормальне значення: ~1G\n• Червоний колір при >2G\n• Прогрес-бари показують відхилення"
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:background="#333333" />

</LinearLayout>